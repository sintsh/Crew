<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_corner"
    >
    <LinearLayout
        android:id="@+id/attributes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/first_name"
            android:layout_width="wrap_content"
            android:maxWidth="80dp"
            android:layout_height="wrap_content"
            android:text="nameeeeeeeeeeeeeeee"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginHorizontal="10dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="80dp"
            android:text="last nameeeeeeeeeeeeeeee"
            android:layout_marginHorizontal="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/department"
            android:layout_width="wrap_content"
            android:maxWidth="80dp"
            android:layout_height="wrap_content"
            android:text="departmentsdkjdkjsdksjkdsdsdsd"
            android:layout_marginHorizontal="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="5dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/attributes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/edit_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/edit"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/delete_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/delete"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>